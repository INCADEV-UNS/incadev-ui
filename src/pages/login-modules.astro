---
import AuthLayout from '@/layouts/AuthLayout.astro';
import { GroupCategorySelector } from '@/components/auth/GroupCategorySelector';

const robots = ["noindex", "nofollow"];
const title = "Iniciar Sesión por Módulo | INCADEV";
const description = "Selecciona tu módulo e inicia sesión en la plataforma INCADEV. Sistema de autenticación para todos los módulos institucionales.";
const keywords = ["INCADEV", "inicio de sesión", "módulos", "autenticación", "sistema educativo", "plataforma virtual"];
const url = "https://instituto.cetivirgendelapuerta.com/login-roles";
const imageOG = "/ISOLOGOTIPO_VERTICAL.svg";
const imagetwt = "/ISOLOGOTIPO_VERTICAL.svg";
---

<AuthLayout {robots} {title} {description} {keywords} {url} {imageOG} {imagetwt}>
  <GroupCategorySelector client:load />
</AuthLayout>
