---
import TechDashboardLayout from '@/layouts/TechDashboardLayout.astro';

const title = "Dashboard Infraestructura | INCADEV Tecnológico";
const description = "Panel de control de infraestructura tecnológica";
---

<TechDashboardLayout {title} {description}>
  <div class="min-h-screen bg-linear-to-br from-purple-500/5 via-background to-purple-500/10">
    <!-- Contenedor principal -->
    <div class="container mx-auto px-4 py-8">
      <!-- Header del dashboard -->
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-4xl font-bold text-foreground mb-2">
              Dashboard Infraestructura
            </h1>
            <p class="text-lg text-muted-foreground">
              Gestión de Activos Tecnológicos y Control de Inventario
            </p>
          </div>
          <div class="flex items-center gap-4">
            <a
              href="/tecnologico/login"
              class="px-6 py-3 rounded-xl bg-muted hover:bg-muted/80 text-foreground font-semibold transition-all hover:scale-105 shadow-md"
            >
              Cerrar Sesión
            </a>
          </div>
        </div>
      </div>

      <!-- Tarjeta de bienvenida -->
      <div class="bg-linear-to-br from-purple-500/10 via-purple-500/5 to-transparent border-2 border-purple-500/20 rounded-2xl p-10 mb-8 shadow-xl">
        <div class="flex items-center gap-6">
          <div class="w-20 h-20 rounded-2xl bg-linear-to-br from-purple-500/30 to-purple-500/10 flex items-center justify-center shadow-lg">
            <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-3xl font-bold text-foreground mb-2">
              ¡Bienvenido, Infraestructura!
            </h2>
            <p class="text-lg text-muted-foreground">
              Panel de control para gestión de hardware y equipamiento tecnológico
            </p>
          </div>
        </div>
      </div>

      <!-- Grid de funcionalidades -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Card 1: Activos Tecnológicos -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-purple-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-purple-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Activos Tecnológicos</h3>
          </div>
          <p class="text-sm text-muted-foreground mb-4">
            CRUD de equipos y activos tecnológicos
          </p>
          <div class="flex gap-2">
            <span class="px-2 py-1 text-xs rounded-md bg-green-500/10 text-green-600">Crear</span>
            <span class="px-2 py-1 text-xs rounded-md bg-blue-500/10 text-blue-600">Leer</span>
            <span class="px-2 py-1 text-xs rounded-md bg-yellow-500/10 text-yellow-600">Actualizar</span>
            <span class="px-2 py-1 text-xs rounded-md bg-red-500/10 text-red-600">Eliminar</span>
          </div>
        </div>

        <!-- Card 2: Inventario -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-purple-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Inventario</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Control de stock y disponibilidad
          </p>
        </div>

        <!-- Card 3: Mantenimiento -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-purple-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Mantenimiento</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Programación y control de mantenimiento
          </p>
        </div>

        <!-- Card 4: Asignaciones -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-purple-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-teal-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Asignaciones</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Asignación de equipos a usuarios
          </p>
        </div>

        <!-- Card 5: Hardware -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-purple-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Hardware</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Gestión de componentes de hardware
          </p>
        </div>

        <!-- Card 6: Reportes -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-purple-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-indigo-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Reportes</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Reportes de inventario y activos
          </p>
        </div>
      </div>

      <!-- Footer info -->
      <div class="mt-12 pt-8 border-t-2 border-dashed">
        <p class="text-center text-sm text-muted-foreground">
          Panel de infraestructura tecnológica. Las funcionalidades se irán agregando progresivamente.
        </p>
      </div>
    </div>
  </div>
</TechDashboardLayout>
