---
import TechDashboardLayout from '@/layouts/TechDashboardLayout.astro';

const title = "Dashboard Seguridad | INCADEV Tecnológico";
const description = "Panel de control de seguridad";
---

<TechDashboardLayout {title} {description}>
  <div class="min-h-screen bg-linear-to-br from-orange-500/5 via-background to-orange-500/10">
    <!-- Contenedor principal -->
    <div class="container mx-auto px-4 py-8">
      <!-- Header del dashboard -->
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-4xl font-bold text-foreground mb-2">
              Dashboard Seguridad
            </h1>
            <p class="text-lg text-muted-foreground">
              Gestión de Seguridad y Encriptación de Información
            </p>
          </div>
          <div class="flex items-center gap-4">
            <a
              href="/tecnologico/login"
              class="px-6 py-3 rounded-xl bg-muted hover:bg-muted/80 text-foreground font-semibold transition-all hover:scale-105 shadow-md"
            >
              Cerrar Sesión
            </a>
          </div>
        </div>
      </div>

      <!-- Tarjeta de bienvenida -->
      <div class="bg-linear-to-br from-orange-500/10 via-orange-500/5 to-transparent border-2 border-orange-500/20 rounded-2xl p-10 mb-8 shadow-xl">
        <div class="flex items-center gap-6">
          <div class="w-20 h-20 rounded-2xl bg-linear-to-br from-orange-500/30 to-orange-500/10 flex items-center justify-center shadow-lg">
            <svg class="w-10 h-10 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-3xl font-bold text-foreground mb-2">
              ¡Bienvenido, Seguridad!
            </h2>
            <p class="text-lg text-muted-foreground">
              Panel de control para protección y seguridad del sistema
            </p>
          </div>
        </div>
      </div>

      <!-- Grid de funcionalidades -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Card 1: Seguridad de Usuarios -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-orange-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Seguridad de Usuarios</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Control de accesos y autenticación
          </p>
        </div>

        <!-- Card 2: Encriptación -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-orange-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-purple-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Encriptación</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Gestión de encriptación de datos
          </p>
        </div>

        <!-- Card 3: Amenazas -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-orange-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-red-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Amenazas</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Seguimiento de amenazas y vulnerabilidades
          </p>
        </div>

        <!-- Card 4: Firewall -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-orange-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Firewall</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Configuración de reglas de firewall
          </p>
        </div>

        <!-- Card 5: Logs de Seguridad -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-orange-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-teal-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Logs de Seguridad</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Registro de eventos de seguridad
          </p>
        </div>

        <!-- Card 6: Reportes -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-orange-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Reportes</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Reportes de seguridad y auditoría
          </p>
        </div>
      </div>

      <!-- Footer info -->
      <div class="mt-12 pt-8 border-t-2 border-dashed">
        <p class="text-center text-sm text-muted-foreground">
          Panel de seguridad. Las funcionalidades se irán agregando progresivamente.
        </p>
      </div>
    </div>
  </div>
</TechDashboardLayout>
