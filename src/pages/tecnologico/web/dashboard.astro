---
import TechDashboardLayout from '@/layouts/TechDashboardLayout.astro';

const title = "Dashboard Desarrollador Web | INCADEV Tecnológico";
const description = "Panel de control del desarrollador web";
---

<TechDashboardLayout {title} {description}>
  <div class="min-h-screen bg-linear-to-br from-indigo-500/5 via-background to-indigo-500/10">
    <!-- Contenedor principal -->
    <div class="container mx-auto px-4 py-8">
      <!-- Header del dashboard -->
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-4xl font-bold text-foreground mb-2">
              Dashboard Desarrollador Web
            </h1>
            <p class="text-lg text-muted-foreground">
              Gestión del Chatbot, Anuncios y Contenido Web
            </p>
          </div>
          <div class="flex items-center gap-4">
            <a
              href="/tecnologico/login"
              class="px-6 py-3 rounded-xl bg-muted hover:bg-muted/80 text-foreground font-semibold transition-all hover:scale-105 shadow-md"
            >
              Cerrar Sesión
            </a>
          </div>
        </div>
      </div>

      <!-- Tarjeta de bienvenida -->
      <div class="bg-linear-to-br from-indigo-500/10 via-indigo-500/5 to-transparent border-2 border-indigo-500/20 rounded-2xl p-10 mb-8 shadow-xl">
        <div class="flex items-center gap-6">
          <div class="w-20 h-20 rounded-2xl bg-linear-to-br from-indigo-500/30 to-indigo-500/10 flex items-center justify-center shadow-lg">
            <svg class="w-10 h-10 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-3xl font-bold text-foreground mb-2">
              ¡Bienvenido, Desarrollador Web!
            </h2>
            <p class="text-lg text-muted-foreground">
              Panel de control para gestión de contenido web y chatbot
            </p>
          </div>
        </div>
      </div>

      <!-- Grid de funcionalidades -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Card 1: Gestión del Chatbot -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-indigo-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Chatbot</h3>
          </div>
          <p class="text-sm text-muted-foreground mb-4">
            Configuración y gestión del chatbot
          </p>
          <div class="flex gap-2">
            <span class="px-2 py-1 text-xs rounded-md bg-green-500/10 text-green-600">Crear</span>
            <span class="px-2 py-1 text-xs rounded-md bg-blue-500/10 text-blue-600">Editar</span>
            <span class="px-2 py-1 text-xs rounded-md bg-purple-500/10 text-purple-600">Config</span>
          </div>
        </div>

        <!-- Card 2: Anuncios -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-indigo-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-orange-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Anuncios</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Administración de anuncios y noticias
          </p>
        </div>

        <!-- Card 3: Landing Page -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-indigo-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-purple-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Landing Page</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Gestión de contenido del landing page
          </p>
        </div>

        <!-- Card 4: Secciones -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-indigo-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-teal-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Secciones Web</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Edición de secciones del sitio web
          </p>
        </div>

        <!-- Card 5: Multimedia -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-indigo-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-pink-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">Multimedia</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Gestión de imágenes y multimedia
          </p>
        </div>

        <!-- Card 6: SEO y Analíticas -->
        <div class="bg-background/50 backdrop-blur-sm border-2 rounded-xl p-6 hover:shadow-lg hover:border-indigo-500/30 transition-all">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-foreground">SEO y Analíticas</h3>
          </div>
          <p class="text-sm text-muted-foreground">
            Optimización y métricas del sitio
          </p>
        </div>
      </div>

      <!-- Footer info -->
      <div class="mt-12 pt-8 border-t-2 border-dashed">
        <p class="text-center text-sm text-muted-foreground">
          Panel de desarrollo web. Las funcionalidades se irán agregando progresivamente.
        </p>
      </div>
    </div>
  </div>
</TechDashboardLayout>
